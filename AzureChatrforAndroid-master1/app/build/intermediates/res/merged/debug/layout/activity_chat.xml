<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom">

    <ListView
        android:id="@+id/listViewChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dip"
        tools:listitem="@layout/row_list_chat"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentStart="true">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#71BCFA"
        android:padding="6dip"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:layout_marginLeft="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <ProgressBar
            android:id="@+id/loadingProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/textNewChat"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.90"
            android:ems="10"
            android:hint="@string/add_textbox_hint" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/buttonAddChat"
            android:layout_width="72dip"
            android:layout_height="match_parent"
            android:onClick="addItem"
            android:text="@string/add_button_text" />

    </LinearLayout>

</RelativeLayout><!-- From: file:/C:/Users/Not-A-Mac/Documents/GitHub/HackUMass/AzureChatrforAndroid-master1/app/src/main/res/layout/activity_chat.xml -->